(defwidget bar []
  (centerbox :orientation "h"
    (workspaces)
    (music)
    (sidestuff)))

(defwidget sidestuff []
  (box :class "sidestuff" :orientation "h" :space-evenly false :halign "end"
    (button
      :onclick "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle"
      (box
        :class {mutedmic == "true" ? "mutedmic" : "unmutedmic"}
      {mutedmic == "true" ? "ï„±" : "ï„°"})
    )
    (metric
      :class {
      volume == 0 ? "volume0"
      : volume < 25 ? "volume25"
      : volume < 50 ? "volume50"
      : volume < 75 ? "volume75"
      : "volume100"
      }
      :label {volume == 0 ? "ðŸ”‡" : volume < 25 ? "ï€¦" : volume < 50 ? "ï€§" : volume < 75 ? "ïš¨" : "ï€¨"}
      :value volume
      :onchange "wpctl set-volume @DEFAULT_AUDIO_SINK@ {}% --limit 1.0"
      :onclick "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
    )
    (metric
      :class ""
      :label "ï”¸"
      :value {EWW_RAM.used_mem_perc}
      :onchange ""
      :onclick ""
    )
    (metric
      :class ""
      :label "ðŸ’¾"
      :value {round((1 - (EWW_DISK["/"].free / EWW_DISK["/"].total)) * 100, 0)}
      :onchange ""
      :onclick ""
    )
  time))


(defwidget workspaces []
  (box :class "workspaces"
    :orientation "h"
    :space-evenly true
    :halign "start"
    :spacing 10
    (for i in workspaces
      (button :class {activeworkspace == i ? "activeworkspace" : ""}
        :onclick "hyprctl dispatch focusworkspaceoncurrentmonitor ${i}"
        "ï„‘"
      )
    )
  )
)

(defwidget music []
  (box :class "music"
    :orientation "h"
    :space-evenly false
    :halign "center"
    {music != "" ? "ðŸŽµ${music}" : ""}
  ))


(defwidget metric [class label value onchange onclick]
  (box :orientation "h"
    :class "metric"
    :space-evenly false
    (eventbox
      :onclick onclick
      (box :class class label))
    (scale :min 0
      :max 101
      :active {onchange != ""}
      :value value
      :onchange onchange
    )))

;; Music
(defwidget music_widget []
  (box :class "genwin" :orientation "h" :space-evenly "false" :vexpand "false" :hexpand "false"
    (box :class "album_art" :vexpand "false" :hexpand "false" :style "background-image: url('${COVER}');")
    (box :orientation "v" :spacing 0 :space-evenly "false" :vexpand "false" :hexpand "false"
      (label :halign "center" :class "song" :wrap "true" :limit-width 20 :text SONG)
      (label :halign "center" :class "artist" :wrap "true" :limit-width 15 :text ARTIST)
      (box :orientation "h" :spacing 20 :halign "center" :space-evenly "true" :vexpand "false" :hexpand "false"
        (button :class "btn_prev" :onclick "scripts/music-info.sh --prev" "ïˆ")
        (button :class "btn_play" :onclick "scripts/music-info.sh --toggle" STATUS)
        (button :class "btn_next" :onclick "scripts/music-info.sh --next" "ï‘"))
      (box :class "music_bar" :halign "center" :vexpand "false" :hexpand "false"
        (eventbox :onscroll "spotify_player seek -50"
          (scale :min 0 :active "true" :max 100 :value CURRENT))))))



(deflisten music :initial ""
    "playerctl --player=spotify_player --follow metadata --format '{{ status }} {{ markup_escape(title) }} - {{ artist }}' || true")

;; Music vars
(defpoll SONG :interval "0.2s" "scripts/music-info.sh --song")
(defpoll ARTIST :interval "0.2s" "scripts/music-info.sh --artist")
(defpoll STATUS :interval "0.2s" "scripts/music-info.sh --status")
(defpoll CURRENT :interval "0.2s" "scripts/music-info.sh --time")
(defpoll COVER :interval "0.2s" "scripts/music-info.sh --cover")
; (defpoll CTIME :interval "0.2s" "scripts/music-info.sh --ctime")
; (defpoll TTIME :interval "0.2s" "scripts/music-info.sh --ttime")

(defpoll volume :interval "0.1s"
"scripts/get-volume.sh")

(defpoll mutedmic :interval "0.1s"
"scripts/get-mute.sh")

(defpoll activeworkspace :interval "0.1s"
  "hyprctl activeworkspace | awk -F '[()]' '{print $2}' | xargs")

(defpoll time :interval "10s"
"date '+%d %b %Y ï€— %H:%M'")

(defvar workspaces "[1, 2, 3, 4, 5, 6, 7]")

(defwindow bar
  :monitor 0
  :exclusive true
  :focusable false
  :geometry (geometry :x "0%"
    :y "0%"
    :width "100%"
    :height "10px"
  :anchor "top center")
  (bar))

;; music
(defwindow music_widget
  :monitor 0
  :stacking "fg"
  :focusable false
  :geometry (geometry :x "50%" :y 10 :width 370 :height 160 :anchor "top center")
  (music_widget))

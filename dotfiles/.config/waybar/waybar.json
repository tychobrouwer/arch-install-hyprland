{
  "layer": "top",
  "position": "top",
  "mod": "dock",
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "modules-left": [
    "custom/clock",
    "hyprland/workspaces"
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "tray",
    "pulseaudio#sink",
    "pulseaudio#source",
    "bluetooth",
    "network",
    "backlight",
    "battery",
    "cpu",
    "memory"
  ],
  "hyprland/window": {
    "format": "{}"
  },
  "hyprland/workspaces": {
    "format": "{icon}",
    "disable-scroll": true,
    "all-outputs": true,
    "active-only": false,
    "onclick": "activate",
    "sort-by-number": true,
    "persistent-workspaces": {
      "*": 3
    }
  },
  "custom/clock": {
    "exec": "date +'%d/%m/%Y %H:%M:%S'",
    "interval": 1,
    "tooltip": false
  },
  "custom/power": {
    "exec": "$HOME/.scripts/power-usage.sh",
    "interval": 1,
    "return-type": "json"
  },
  "memory": {
    "format": " {used:0.1f}GiB",
    "tooltip": false,
    "interval": 1
  },
  "cpu": {
    "format": " {usage:2}%",
    "tooltip": false,
    "interval": 5
  },
  "network": {
    "tooltip": false,
    "format-wifi": " {ifname} ({signalStrength}%)",
    "format-ethernet": " {ifname}",
    "format-linked": " {ifname}",
    "format-disconnected": ""
  },
  "tray": {
    "icon-size": 16,
    "spacing": 10
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": ["󰃞", "󰃟", "󰃠"],
    "on-scroll-up": "brightnessctl set 1%+",
    "on-scroll-down": "brightnessctl set 1%-",
    "min-length": 6,
    "tooltip": false
  },
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-charging": " {capacity}%",
    "format-plugged": " {capacity}%",
    "format-alt": "{time} {icon}",
    "tooltip": false,
    "interval": 1,
    "format-icons": [
      "",
      "",
      "",
      "",
      ""
    ]
  },
  "bluetooth": {
    "format": " {status}",
    "format-disabled": "",
    "format-no-controller": "",
    "format-connected": " {num_connections}",

    "tooltip": false
  },
  "pulseaudio#sink": {
    "tooltip": false,
    "format": "{icon}{volume}%",
    "format-muted": " {volume}%",
    "on-click": "pamixer -t",
    "on-scroll-up": "pamixer --default-source -i 5",
    "on-scroll-down": "pamixer --default-source -d 5",
    "format-icons": {
      "headphone": " ",
      "hands-free": " ",
      "headset": " ",
      "phone": " ",
      "portable": " ",
      "car": " ",
      "default": [
        " ",
        " ",
        " "
      ]
    }
  },
  "pulseaudio#source": {
    "format": "{format_source}",
    "format-source": " {volume}%",
    "format-source-muted": " {volume}%",
    "on-click": "pamixer --default-source -t",
    "on-scroll-up": "pamixer --default-source -i 5",
    "on-scroll-down": "pamixer --default-source -d 5",
    "tooltip": false
  }
}
# Aliases
alias la='ls -lAFh --color=always --group-directories-first'
alias ls='ls -AFh --color=always --group-directories-first'
alias cp='cp -i' 
alias mv='mv -i'
alias rm='rm -i'
alias mkdir='mkdir -p'
alias ..='cd ..'

alias neofetch_tiny='neofetch --disable packages resolution de wm wm_theme theme icons term term_font cpu gpu memory --ascii_distro arch_small --color_blocks off'
alias clear='clear && echo && neofetch_tiny'

alias tree='tree -CAhF -L 3 --dirsfirst'
alias treed='tree -CAFd -L 3'

alias myip="whatsmyip"

alias pacman='sudo pacman'
alias pacman-autoremove='sudo pacman -Rns $(pacman -Qtdq) && paru -Sccy --noconfirm'
